<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#3dc1d3"
    tools:context=".MainActivity">

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="EzyFoody"
                android:textColor="#fff"
                android:fontFamily="@font/custom_font"
                android:textSize="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txtSaldo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Your Saldo : Rp 0"
                android:textColor="#fff"
                android:textSize="30dp"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:id="@+id/btnDrink"
                    android:text="Drinks"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/drink"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="btnDrinkOnClick"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:drawableTop="@drawable/snacks"
                    android:id="@+id/btnSnack"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@null"
                    android:text="Snacks"
                    android:textColor="#ffffff"
                    android:textSize="15dp"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:id="@+id/btnFood"
                    android:text="Foods"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/fast_food"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="150dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:id="@+id/btnTopUp"
                    android:text="Top Up Saldo"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:drawableTop="@drawable/money"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="btnTopUpOnClick"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:id="@+id/btnLocation"
                    android:text="Locations"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/map"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="btnLocationOnClick"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>