<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="#3dc1d3"
    tools:context=".DrinksActivity">

    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_gravity="center"
            android:layout_marginBottom="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Drinks"
                android:textColor="#fff"
                android:fontFamily="@font/custom_font"
                android:textSize="80dp"/>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:id="@+id/btnMineral"
                    android:text="Air Mineral"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/mineral_water"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="btnMineralOnClick"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:drawableTop="@drawable/juice"
                    android:id="@+id/btnApple"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:background="@null"
                    android:text="Jus Apel"
                    android:textColor="#ffffff"
                    android:textSize="15dp"
                    android:onClick="btnApelOnClick"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:gravity="center"
            android:layout_marginTop="30dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <LinearLayout
                android:gravity="left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:id="@+id/btnMango"
                    android:text="Jus Mangga"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:drawableTop="@drawable/mango"
                    android:background="@null"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="btnMangoOnClick"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="30dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/border">

                <Button
                    android:paddingTop="20dp"
                    android:id="@+id/btnAvocado"
                    android:text="Jus Alpukat"
                    android:textSize="15dp"
                    android:textColor="#ffffff"
                    android:background="@null"
                    android:drawableTop="@drawable/orange_juice"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:onClick="btnAvocadoOnClick"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>